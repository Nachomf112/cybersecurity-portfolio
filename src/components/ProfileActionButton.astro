---
// components imports
import { Button} from "./ui/button";
import LinkedIn from "./icons/LinkedIn.astro";
import DownloadArrow from "./icons/DownloadArrow.astro";

// config import
import { ME } from '@/config.ts';

const resume = ME.contactInfo.resumeDoc;
const {linkedin, email} = ME.contactInfo;
---
<div class="profile-action-buttons w-full flex gap-2">
  {/* Botón amarillo: descarga directa del CV */}
  <a href={resume} download class="w-full">
    <Button
      size="lg"
      className="w-full justify-center gap-2 cv-btn flex-1 text-n700 bg-primary-light dark:bg-primary-dark hover:bg-primary-dark hover:text-white dark:hover:bg-primary-light"
    >
      Download CV
      <DownloadArrow width={24} height={24} />
    </Button>
  </a>

  {/* Botón LinkedIn */}
  <Button
    size="icon"
    className="w-14 h-14 li-btn flex-none text-n700 dark:text-n200 bg-white dark:bg-black hover:bg-grey-900 hover:text-white"
  >
    <a href={linkedin} aria-label="My LinkedIn profile link" target="_blank" rel="noreferrer">
      <LinkedIn width={24} height={24} />
    </a>
  </Button>

  {/* Botón Email */}
  <Button
    size="icon"
    className="w-14 h-14 li-btn flex-none text-n700 dark:text-n200 bg-white dark:bg-black hover:bg-grey-900 hover:text-white"
  >
    <a href={`mailto:${email}`} aria-label="Send me an email">
      <svg viewBox="0 0 24 24" width="24" height="24" class="fill-n700 dark:fill-light-theme">
        <path d="M4 4h16a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2zm0 2v.01L12 11l8-4.99V6H4zm0 3.236V18h16V9.236l-7.445 4.653a2 2 0 0 1-2.11 0L4 9.236z" />
      </svg>
    </a>
  </Button>
</div>