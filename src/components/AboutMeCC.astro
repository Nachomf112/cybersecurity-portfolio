---
 // data imports
import workExperience from "@/data/Jobs.ts";
import education from "@/data/education.ts";
import languages from "@/data/languages";
import hardSkills from "@/data/hardSkills";
import softSkills from "@/data/softSkills";

// component imports
import JobDetails from "./JobDetails.astro";
import EduDetail from "./EduDetail.astro";
import SkillCard from "./SkillCard.astro";

// config import
import { ME } from "@/config";
---

<div class="relative flex flex-col gap-8 w-full mt-10 px-4 text-white">
  {/* Description or About me -- Section */}
  <div class="mb-4">
    <p>
      {ME.aboutMe}
    </p>
  </div>

  {/* Work experience section */}
  <div class="mb-4">
    <h2 class="text-3xl font-bold mb-4">Work Experience</h2>
    <div class="flex flex-col gap-6">
      {workExperience.map((job) => (
        <JobDetails jobData={job} />
      ))}
    </div>
  </div>

  {/* Education section */}
  <div class="mb-4">
    <h2 class="text-3xl font-bold mb-4">Education</h2>
    <div class="flex flex-col gap-6">
      {education.map((edu) => (
        <EduDetail eduData={edu} />
      ))}
    </div>
  </div>

  {/* Hard Skills section */}
  <div class="mb-4">
    <h2 class="text-3xl font-bold mb-4">Hard Skills</h2>
    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-4">
      {hardSkills.map((skill) => (
        <SkillCard
          icon={skill.icon}
          name={skill.name}
          description={skill.description}
          showDescription={true}
        />
      ))}
    </div>
  </div>

  {/* Soft Skills section */}
  <div class="mb-4">
    <h2 class="text-2xl font-bold mb-4">Soft Skills</h2>
    <div class="grid gap-4 md:grid-cols-4">
      {softSkills.map((skill) => (
        <SkillCard
          icon={skill.icon}
          name={skill.name}
          description={skill.description}
          showDescription={false}
        />
      ))}
    </div>
  </div>

  {/* Languages section */}
  <div class="mb-4">
    <h2 class="text-2xl font-bold mb-4">Languages</h2>
    <div class="flex flex-col gap-2 text-n600 dark:text-n300">
      {languages.map((lang) => (
        <p>
          <span class="font-semibold">{lang.name}</span>
          <span class="ml-1">â€“ {lang.level}</span>
        </p>
      ))}
    </div>
  </div>
</div>
